doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css')
  body

  .container
    .row
      .alert.alert-danger(style='width:370px;margin:auto;margin-top:50px;visibility:hidden')
        strong#alert-text
      form#signup(method='post',style='width:400px;margin:auto;', action='/register', role='form')
        .col-lg-12
          .form-group
            label(for='username') Username:
            .input-group
              input#username.form-control(type='text', required='', placeholder='username', name='username')
              span.input-group-addon
                i.glyphicon.glyphicon-ok.form-control-feedback
          .form-group
            label(for='email') Stony Brook Email:
            .input-group
              input#email.form-control(type='email', required='', placeholder='email', name='email')
              span.input-group-addon
                i.glyphicon.glyphicon-ok.form-control-feedback
          .form-group
            label(for='password') Password:
            .input-group
              input#password.form-control(type='password', required='', placeholder='password', name='password')
              span.input-group-addon
                i.glyphicon.glyphicon-ok.form-control-feedback
          .form-group
            label(for='password2') Password Again:
            .input-group
              input#password2.form-control(type='password', required='', placeholder='password', name='password2')
              span.input-group-addon
                i.glyphicon.glyphicon-ok.form-control-feedback
          input#submit.btn.btn-primary.pull-left(type='submit', value='Submit', name='submit')
    script(src='http://code.jquery.com/jquery-1.11.0.min.js')
    script(src='/javascripts/lib/bootstrap.min.js')
    script(src='/javascripts/signup.js')
     